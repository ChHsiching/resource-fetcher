{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Resource Fetcher",
  "version": "0.2.0",
  "identifier": "com.resource-fetcher.gui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "Resource Fetcher",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "theme": "light"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../dist/cli/*"
    ]
  }
}
